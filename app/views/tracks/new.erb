<h1>Post a track</h1>
<hr/>

<% if @track.errors.any? %>
  <div>
    <strong>Some issues with your track, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks">
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @track.author %>">
  </div>

  <div>
    <label>URL Link:</label>
    <input type="text" name="link" value="<%= @track.link %>">
  </div>

  <div>
    <label>Song Artist:</label>
    <input type="text" name="artist" value="<%= @track.artist %>">
  </div>

  <div>
    <label>Song Title:</label>
    <input type="text" name="title" value="<%= @track.title %>">
  </div>

  <div>
    <input type="submit" value="Submit" >
  </div>
</form>